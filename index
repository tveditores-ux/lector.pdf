<body>

<div class="container">
    <button id="theme-toggle">Modo Oscuro</button>
    <h1>Diario de Lectura</h1>
    
    <div style="text-align: center; margin-bottom: 20px;">
        <input type="file" id="pdf-upload" accept="application/pdf">
    </div>
    
    <div id="chapters"></div>

    <div class="settings-row">
        <div style="flex-grow: 2;">
            <label style="font-size: 0.7rem;">Narrador:</label>
            <select id="voice-select" style="width: 100%;"></select>
        </div>
        <div class="font-control">
            <label>Tamaño de letra: <span id="font-size-val">18</span>px</label>
            <input type="range" id="font-slider" min="12" max="36" value="18">
        </div>
    </div>

    <div id="playlist" style="font-size: 18px;">
        <div style="text-align: center; margin-top: 200px; opacity: 0.5;">
            — Inserte un archivo para digitalizar el texto —
        </div>
    </div>

    <div class="controls">
        <button id="btn-play" class="main-btn">Leer</button>
        <button id="btn-stop" style="background:none; border:none; text-decoration: underline; color: var(--text); cursor:pointer;">Detener</button>
    </div>

    <div id="status">Esperando...</div>
</div>

<script>
    const pdfjsLib = window['pdfjs-dist/build/pdf'];
    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js';

    const synth = window.speechSynthesis;
    let fragments = [];
    let currentIndex = 0;
    let isPlaying = false;

    // Control de Tamaño de Fuente
    const fontSlider = document.getElementById('font-slider');
    const playlist = document.getElementById('playlist');
    const fontValLabel = document.getElementById('font-size-val');

    fontSlider.addEventListener('input', (e) => {
        const size = e.target.value;
        playlist.style.fontSize = size + 'px';
        fontValLabel.innerText = size;
    });

    // Control de Tema
    document.getElementById('theme-toggle').addEventListener('click', () => {
        document.body.classList.toggle('dark-mode');
        const isDark = document.body.classList.contains('dark-mode');
        document.getElementById('theme-toggle').innerText = isDark ? "Modo Claro" : "Modo Oscuro";
    });

    function populateVoices() {
        const select = document.getElementById('voice-select');
        const voices = synth.getVoices();
        select.innerHTML = voices
            .map((v, i) => `<option value="${i}" ${v.lang.includes('es') ? 'selected' : ''}>${v.name}</option>`)
            .join('');
    }
    synth.onvoiceschanged = populateVoices;
    populateVoices();

    document.getElementById('pdf-upload').addEventListener('change', async (e) => {
        const file = e.target.files[0];
        if (!file) return;
        
        document.getElementById('status').innerText = "Procesando...";
        const pdf = await pdfjsLib.getDocument(await file.arrayBuffer()).promise;
        let text = "";
        for (let i = 1; i <= pdf.numPages; i++) {
            const page = await pdf.getPage(i);
            const content = await page.getTextContent();
            text += content.items.map(s => s.str).join(" ") + " ";
        }
        renderText(text);
    });

    function renderText(text) {
        fragments = text.match(/[^.!?]+[.!?]+/g) || [text];
        const playlistDiv = document.getElementById('playlist');
        const chapters = document.getElementById('chapters');
        playlistDiv.innerHTML = '';
        chapters.innerHTML = '';

        fragments.forEach((frag, i) => {
            const cleanFrag = frag.trim();
            if(!cleanFrag) return;

            const span = document.createElement('span');
            span.className = 'sentence';
            span.id = `s-${i}`;
            span.innerText = cleanFrag + " ";
            span.onclick = () => jumpTo(i);
            playlistDiv.appendChild(span);

            const low = cleanFrag.toLowerCase();
            if(low.includes('capítulo') || low.includes('capitulo') || low.includes('introducción') || low.includes('parte')) {
                const btn = document.createElement('button');
                btn.className = 'chapter-btn';
                btn.innerText = cleanFrag.substring(0, 15) + "...";
                btn.onclick = () => jumpTo(i);
                chapters.appendChild(btn);
            }
        });
        document.getElementById('status').innerText = "Carga finalizada.";
    }

    function speak(index) {
        if (index >= fragments.length || !isPlaying) {
            isPlaying = false;
            document.getElementById('btn-play').innerText = "Leer";
            return;
        }

        currentIndex = index;
        const utterance = new SpeechSynthesisUtterance(fragments[index]);
        utterance.voice = synth.getVoices()[document.getElementById('voice-select').value];
        utterance.rate = 0.9;

        document.querySelectorAll('.sentence').forEach(s => s.classList.remove('active'));
        const el = document.getElementById(`s-${index}`);
        if(el) {
            el.classList.add('active');
            el.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        utterance.onend = () => { if(isPlaying) speak(index + 1); };
        utterance.onerror = () => { if(isPlaying) speak(index + 1); };

        synth.speak(utterance);
    }

    function jumpTo(index) {
        synth.cancel();
        isPlaying = true;
        document.getElementById('btn-play').innerText = "Pausar";
        speak(index);
    }

    document.getElementById('btn-play').addEventListener('click', () => {
        if (isPlaying) {
            synth.pause();
            isPlaying = false;
            document.getElementById('btn-play').innerText = "Reanudar";
        } else {
            if (synth.paused) synth.resume();
            else speak(currentIndex);
            isPlaying = true;
            document.getElementById('btn-play').innerText = "Pausar";
        }
    });

    document.getElementById('btn-stop').addEventListener('click', () => {
        isPlaying = false;
        synth.cancel();
        currentIndex = 0;
        document.getElementById('btn-play').innerText = "Leer";
    });

    setInterval(() => {
        if (isPlaying && !synth.paused) {
            synth.pause();
            synth.resume();
        }
    }, 12000);
</script>

</body>
</html>
