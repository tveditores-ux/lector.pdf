    <title>E-Ink Podcast Reader Pro</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>
    <style>
        :root {
            --bg: #f4f4f4;
            --text: #1a1a1a;
            --accent: #4a4a4a;
            --border: #d1d1d1;
            --active-bg: #1a1a1a;
            --active-text: #f4f4f4;
        }

        body.dark-mode {
            --bg: #121212;
            --text: #b0b0b0;
            --accent: #888888;
            --border: #333333;
            --active-bg: #e0e0e0;
            --active-text: #121212;
        }

        body {
            font-family: 'Georgia', serif;
            background-color: var(--bg);
            color: var(--text);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            margin: 0;
            transition: background-color 0.3s, color 0.3s;
        }

        .container {
            max-width: 800px;
            width: 90%;
            border: 2px solid var(--text);
            padding: 30px;
            background: var(--bg);
            box-shadow: 8px 8px 0px var(--border);
            position: relative;
        }

        #theme-toggle {
            position: absolute;
            top: 10px;
            right: 10px;
            background: none;
            border: 1px solid var(--text);
